.Page{margin-bottom:20px}.Page .tool-box{text-align:right}.Page .status .selected-categories,.Page .status .selected-hall{font-size:120%;padding:4px;border:solid 1px #ff9696;border-radius:4px;color:#fff;background:rgba(155,90,90,0.8);box-shadow:1px 1px 2px 0 rgba(0,0,0,0.4);margin-left:4px}.tool-box-button{border:0}.ItemEditor .item-name{font-size:150%}.ItemEditor .item-image{max-width:400px}.ItemEditor .hall-name{cursor:pointer;margin-right:6px}.ItemEditor .message{font-size:120%;font-weight:120%}.Item{padding:6px;padding-left:10px;border-radius:0;position:relative;box-shadow:1px 1px 2px 0 rgba(0,0,0,0.4);margin-top:3px;margin-bottom:6px}.Item .tool-box{position:absolute;right:5px}.Item .tool-box .btn{display:none;background:0;border:0}.Item .item-name{display:inline-block;margin-bottom:2px}.Item .item-unit-price{width:30%;margin-right:50px;font-size:70%;float:right}.Item .item-image{float:left;margin-right:4px;max-height:100px}.Item .transition-rotation-enter{transform:rotate(-90deg);transition:transform .1s ease-in 0s}.Item .transition-rotation-enter-active{transform:rotate(0)}.Item .transition-rotation-leave{transform:rotate(0);transition:transform .3s ease-in 0s}.Item .transition-rotation-leave-active{transform:rotate(-90deg)}.Item:hover{cursor:pointer;background:rgba(255,230,230,0.6)}.Item:hover .tool-box .btn{display:inline}.ItemList .add-message{text-align:right}.Message{position:relative;top:0;margin-left:5%;margin-right:5%;background:rgba(0,0,0,0.7);border-bottom-left-radius:8px;border-bottom-right-radius:8px;border-left:solid 4px rgba(255,255,255,0.8);border-right:solid 4px rgba(255,255,255,0.8);border-bottom:solid 4px rgba(255,255,255,0.8);padding:5px}.Message .tool-box{margin-top:3px;text-align:right}.Message .message-text{color:#fff}.icon-label{margin-left:10px}.MenuItemEditor .go-icon-list{color:#ff9664}.MenuItem{cursor:pointer}.MenuItem .remover{color:rgba(0,0,0,0);margin-left:-4px;margin-right:4px}.MenuItem .editor{color:rgba(0,0,0,0);margin-right:6